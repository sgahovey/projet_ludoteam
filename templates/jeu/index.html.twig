{% extends 'base.html.twig' %}

{% block title %}Liste des Jeux{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper table { width: 100%; border-collapse: collapse; }
    .example-wrapper th, .example-wrapper td { border: 1px solid #ddd; padding: 8px; text-align: left; }
    .example-wrapper th { background-color: #f2f2f2; }
</style>

<div class="example-wrapper">
    <h1>Liste des Jeux</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Nombre de Participants</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            {% for jeu in jeux %}
                <tr>
                    <td>{{ jeu.id }}</td>
                    <td>{{ jeu.nom }}</td>
                    <td>{{ jeu.nbParticipant }}</td>
                    {# <td>{{ jeu.type }}</td> #}
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun jeu trouv√©.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
