{% extends 'base.html.twig' %}

{% block body %}
    <h1>Affichage du Jeu : {{ jeu.nom }}</h1>

    <table>
        <!-- Affichage du type de jeu -->
        <tr>
            <th>Type</th>
            <td>{{ attributs.type }}</td>
        </tr>

        <!-- Affichage des participants -->
        <tr>
            <th>Participants</th>
            <td>
                {% if participants|length > 0 %}
                    <ul>
                        {% for participant in participants %}
                            <li>{{ participant.name }} {{ participant.name }}</li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p>Aucun participant</p>
                {% endif %}
            </td>
        </tr>

        <!-- Affichage des autres attributs dynamiques -->
        {% for key, value in attributs %}
            {% if key != 'type' %}  {# On Ã©vite d'afficher le 'type' encore une fois #}
                <tr>
                    <th>{{ key|capitalize }}</th>
                    <td>{{ value }}</td>
                </tr>
            {% endif %}
        {% endfor %}
    </table>

{% endblock %}
